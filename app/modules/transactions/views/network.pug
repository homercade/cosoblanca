extends ../../../templates/master.pug 
block vars
  - var title = 'Network Assignment'

block unique-content
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header
          | Network Assignment
          button.btn.btn-primary.btn-success.btn-lg.pull-right(type='button', data-toggle="modal", data-target="#addModal")
            i.fa.fa-plus-circle.fa-fw
            |  Assign Equipment
      .col-lg-12
        .panel.panel-default
          .panel-body
            .table-responsive
              table.table.table-hover
                thead
                    tr
                      th Owner
                      th Device
                      th Device Account
                      th Network Address
                      th Actions
                tbody
                  each netty in networks
                    tr
                      td #{netty.strOwnerName} 
                      td #{netty.strDeviceName} 
                      td #{netty.strDeviceID} 
                      td #{netty.strNetworkAddress}  
                      td 
                        button.btn.btn-primary.btn-circle(type='button', title='Edit storage input', data-toggle="modal", data-target="#editModal", data-id=netty.intNetworkID)
                            i.fa.fa-wrench
                        button.btn.btn-danger.btn-circle(type='button', title='Delete storage data', data-toggle="modal", data-target="#deleteModal", data-id=netty.intNetworkID)
                            i.fa.fa-trash 

    #addModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Add Stock
          form(action='/network/create', method='post')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input.hidden#id(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label Owned By
                        select#netName.form-control(name='netName')
                          each emp in employ
                            option.netName(value=emp.strFirstName+' '+emp.strLastName) #{emp.strFirstName} #{emp.strLastName}
                    .col-md-6
                      .form-group
                        label.control-label Device Name
                        select#netDevName.form-control(name='netDevName')
                          each dev in devvy
                            option.netDevName(value=dev.strUnitTypeDesc) #{dev.strUnitTypeDesc}
                    .col-md-6
                      .form-group
                        label.control-label Device ID
                        select#netDev.form-control(name='netDev')
                          each acc in accy
                            option.netDev(value=acc.strDeviceAccount) #{acc.strDeviceAccount}
                    .col-md-12
                      .form-group
                        label.control-label Network Address
                        input.netAdd.form-control(type='text' name='netAdd' placeholder="AAAA-000" required)
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='submit') Save

    #editModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Add Stock
          form(action='/network/update', method='post')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input.hidden.id(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label Owned By
                        select#netName.form-control(name='netName')
                          each emp in employ
                            option.netName(value=emp.strFirstName+' '+emp.strLastName) #{emp.strFirstName} #{emp.strLastName}
                    .col-md-6
                      .form-group
                        label.control-label Device Name
                        select#netDevName.form-control(name='netDevName')
                          each dev in devvy
                            option.netDevName(value=dev.strUnitTypeDesc) #{dev.strUnitTypeDesc}
                    .col-md-6
                      .form-group
                        label.control-label Device ID
                        select#netDev.form-control(name='netDev')
                          each acc in accy
                            option.netDev(value=acc.strDeviceAccount) #{acc.strDeviceAccount}
                    .col-md-12
                      .form-group
                        label.control-label Network Address
                        input.netAdd.form-control(type='text' name='netAdd' placeholder="AAAA-000" required)
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='submit') Save


    #deleteModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Remove Stock
          form(action='/network/delete', method='post')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input.hidden.id(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        h4 Delete this stock?
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-default(type='submit') Delete

    script.
      $(document).ready(function() {
      $('#dataTables-example').DataTable({
      responsive: true
      });
      });

    script.
      $('#deleteModal').on('show.bs.modal', function(event){
        var button = $(event.relatedTarget)      
        var id = button.data('id')
        let modal = $(this)     
        modal.find('.modal-body .id').val(`${id}`)
      });

    script.
      $('#editModal').on('show.bs.modal', function(event){
      var button = $(event.relatedTarget)      
      var id = button.data('id')
      var equip = button.data('equip')
      var qty = button.data('qty')
      let modal = $(this);     
      modal.find('.modal-body .id').val(`${id}`)
      modal.find('.modal-body .strgName').val(`${equip}`)
      modal.find('.modal-body .strgQty').val(`${qty}`)
      });
      

  body
    #wrapper
      .col-lg-12
        h1.page-header
          | Reports
      .col-lg-12
        .panel.panel-default
          .panel-body
            .table-responsive
              table.table.table-hover.datatable
                thead
                  tr
                    th Employee ID
                    th Employee Name
                    th Equipment
                    th Property No.
                    th Serial No.
                    th MR Date
                    th Department
                    th Value
                tbody
                    each rep in reports
                      tr
                        td EMP#{rep.intZFEmpID}
                        td #{rep.strFirstName} #{rep.strLastName}
                        td #{rep.txtActualEquipment}
                        td #{rep.txtPropertyNumber}
                        td #{rep.txtSerialNumber}
                        td #{rep.MRDate}
                        td #{rep.strOwnerDept}
                        td â‚± #{rep.fltPrice}


extends ../../../templates/master.pug 
block vars
  - var title = 'Value'

block unique-content
  #page-wrapper
    .row
      .col-lg-12
        h1.page-header
          | Value
          button.btn.btn-primary.btn-success.btn-lg.pull-right(type='button', data-toggle="modal", data-target="#addModal")
            i.fa.fa-plus-circle.fa-fw
            |  Set Value
      .col-lg-12
        .panel.panel-default
          .panel-body
            .table-responsive
              table.table.table-hover
                thead
                  tr
                    th Unit
                    th Value
                    th Action
                tbody
                  each price in pricey
                    tr
                      td #{price.txtUnitDesc}
                      td ₱#{price.fltPrice}
                      td
                        button.btn.btn-primary.btn-circle(type='button', title='Edit value', data-toggle="modal", data-target="#editModal", data-id=price.intPriceID, data-unit=price.txtUnitDesc, data-price=price.fltPrice)
                          i.fa.fa-wrench
                        button.btn.btn-danger.btn-circle(type='button', title='Delete value', data-toggle="modal", data-target="#deleteModal", data-id=price.intPriceID)
                          i.fa.fa-trash

    #addModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Add Value
          form(action='/price', method='post')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input.hidden.id(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label Unit Type
                        select#priStorage.form-control(name='priStorage')
                          each eqs in equips
                            option(value=eqs.txtStorageEquip, required) #{eqs.txtStorageEquip}
                    .col-md-12
                      .form-group
                        label.control-label Value
                        input#priPrice.form-control(type='number' name='priPrice' placeholder="5000.00" onkeypress='return restrictCharacters(this, event, alphaNumOnly)' required)
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='submit') Save

    #editModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Edit Value
          form(action='/price/update', method='post')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input.hidden.id(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        label.control-label Unit Type
                        select#priStorage.form-control(name='priStorage')
                          each eqs in equiper
                            option(value=eqs.txtStorageEquip, required) #{eqs.txtStorageEquip}
                    .col-md-12
                      .form-group
                        label.control-label Value
                        input.priPrice.form-control(type='number' name='priPrice' placeholder="5000.00" onkeypress='return restrictCharacters(this, event, floatOnly)' required)
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='submit') Save


    #deleteModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
            h4#myModalLabel.modal-title Remove Value
          form(action='/price/delete', method='post')
            .modal-body
              .container-fluid
                .container-fluid(style='padding:1rem 4rem 1rem 4rem;')
                  input.hidden.id(type='text' name='id')
                  .row
                    .col-md-12
                      .form-group
                        h4 Delete this value?
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-default(type='submit') Delete

    script.
      $('#deleteModal').on('show.bs.modal', function(event){
        var button = $(event.relatedTarget)      
        var id = button.data('id')
        let modal = $(this)     
        modal.find('.modal-body .id').val(`${id}`)
      });

    script.
      $('#editModal').on('show.bs.modal', function(event){
      var button = $(event.relatedTarget)      
      var id = button.data('id') 
      var unit = button.data('unit') 
      var price = button.data('price')
      let modal = $(this);     
      modal.find('.modal-body .id').val(`${id}`)
      modal.find('.modal-body .priUnit').val(`${unit}`)
      modal.find('.modal-body .priPrice').val(`${price}`)
      });

    script.
      var alphaNumOnly = /^[a-zA-Z0-9]+$/i;
      var floatOnly = [-+]?([0-9]*\.[0-9]+|[0-9]+);

      function restrictCharacters(myfield, e, restrictionType) {
          if (!e) var e = window.event
          if (e.keyCode) code = e.keyCode;
          else if (e.which) code = e.which;
          var character = String.fromCharCode(code);
          // if they pressed esc... remove focus from field...
          if (code==27) { this.blur(); return false; }
          // ignore if they are press other keys
          // strange because code: 39 is the down key AND ' key...
          // and DEL also equals .
          if (!e.ctrlKey && code!=9 && code!=8 && (code!=39 || (code==39 && character=="'"))) {
              if (character.match(restrictionType)) {
                  return true;
              } else {
                  return false;
              }
          }
      };